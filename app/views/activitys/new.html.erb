<h1>Add Todo List </h1>

     <div class="row">
        <div class="col-xs-12 col-md-8" >

		 <%= form_for @activitys do |f| %> 
         <%= f.label "Name" %>  
         <%= f.text_field :name %>
         <br />
         <%= f.label "Description" %>  
         <%= f.text_area :description %>
           <br />
         <%= f.label "List Link" %>
         <%= f.text_field :link %> 
          <br /> 
         <%= f.submit %> 
         <% end %>
       </div>